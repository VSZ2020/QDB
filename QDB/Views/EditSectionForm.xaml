<Window x:Class="QDB.Views.EditSectionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QDB.Views"
        mc:Ignorable="d"
        Title="Редактирование подраздела" Height="auto" Width="367" WindowStartupLocation="CenterScreen" SizeToContent="Height">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Введите название"/>
            <TextBox Text="Подраздел 1" x:Name="tbSectionHeader"/>
            <Button Content="Подтвердить" IsDefault="True" x:Name="btnOk"/>
            <Button Content="Отмена" IsCancel="True" x:Name="btnCancel"/>
        </StackPanel>
    </Grid>
</Window>
